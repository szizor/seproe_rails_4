<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="loginModalLabel">Iniciar sesión</h4>
      </div>
        <%= form_for(resource, :as => resource_name,
                      :url => user_session_path,
                      :html => {:id => "sign_in_user"},
                      :format => :json,
                      :remote => true,
                      :class => "form-signin" ) do |f| %>
        <div class="modal-body">
          <div class="row">
          <div class="col-md-12">
            <div class="alert alert-danger" style="display: none"></div>
          </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="social-box">
                <div class="row mg-btm">
                  <div class="col-md-12">
                    <a href="/users/auth/facebook" class="btn btn-primary btn-facebook btn-block">
                      <i class="fa fa-facebook"></i>Ingresar con Facebook
                    </a>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <a href="/users/auth/twitter" class="btn btn-info btn-twitter btn-block">
                      <i class="fa fa-twitter"></i>Ingresar con Twitter
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="login-form-main">
                <div class="form-group">
                  <%= f.text_field :username, :autofocus => true, :class => "form-control", :placeholder =>"Nombre de Usuario" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, :class => "form-control", :placeholder =>"contraseña"%>
                </div>
                <div class="checkbox">
                  <label>
                    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="row">
            <div class="col-xs-8 col-md-8">
              <div class="pull-left text-left">
                <a href="#" data-toggle="modal" data-target="#forgetPasswordModal">¿Olvidaste tu contraseña?</a><br/>
                <a href="#" data-toggle="modal" data-target="#registerModal">Regístrese ahora!</a>
              </div>
            </div>
            <div class="col-xs-4 col-md-4 pull-right">
              <%= f.submit "Login", :class=> "btn btn-large btn-danger pull-right" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>