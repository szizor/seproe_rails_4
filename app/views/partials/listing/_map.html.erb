<div class="map-holder">
  <div id="map-canvas" class="map-canvas"></div>
  <div class="map-options text-center">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-adopted active">
        <input type="checkbox" checked name="adoptado"> <i class="glyphicon glyphicon-stop"></i>Adoptado
      </label>
      <label class="btn btn-free active">
        <input type="checkbox" checked name="libre"> <i class="glyphicon glyphicon-stop"></i>Libre
      </label>
      <label class="btn btn-pending active">
        <input type="checkbox" checked name="En Proceso"> <i class="glyphicon glyphicon-stop"></i>En Proceso
      </label>
      <label class="btn btn-featured active">
        <input type="checkbox" checked name="preferido"> <i class="glyphicon glyphicon-star"></i>Preferido
      </label>
    </div>
    <div class="map-maximizer">
      <button class="btn btn-transparent">
        <span class="helper-text">Cerrar Mapa</span>
        <span class="fa fa-caret-up"></span>
      </button>
    </div>
  </div>
</div>
