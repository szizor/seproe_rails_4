<% title @listing.name %>
<% content_for :head do %>
<link rel="stylesheet" href="/assets/admin/lib/magnific-popup/magnific-popup.css">
<% end %>
<div class="row" id="paintings">
  <div class="col-sm-12" id="gallery_grid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= @listing.name %></h4>
      </div>
      <table id="dt_basic" class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>Preview</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody>
          <% for image in @listing.images %>
          <tr class="mix">
            <td><%= image.id %></td>
            <td>
              <%= link_to image.image_url, class: 'img-thumbnail img_wrapper gal_lightbox' do %>
                <%= image_tag(image.image.url(:thumb), :class => "img-responsive") %>
              <% end %>
            </td>
            <td>
              <%#= link_to "Editar", edit_admin_listing_image_path(@listing,image), :class => 'btn btn-primary' %>
              <% if !image.approved %>
                <%= link_to "Aprovar", approve_admin_listing_image_path(@listing,image), :confirm => '¿Está seguro? ', :method => :put, :class => 'btn btn-primary' %>
              <% end -%>
              <%= link_to "Borrar", admin_listing_image_path(@listing,image), :confirm => '¿Está seguro? ', :method => :delete, :class => 'btn btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-body text-center">
    <%= link_to "Añadir nueva foto", new_admin_listing_image_path(:listing_id => @listing.id), :class => 'btn btn-primary' %>
  </div>
</div>

<% content_for :footer do %>

<link rel="stylesheet" href="/assets/admin/lib/magnific-popup/jquery.magnific-popup.min.js">
<link rel="stylesheet" href="/assets/admin/pages/ebro_gallery.js">

<% end %>
