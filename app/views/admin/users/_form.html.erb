<div class="container">
  <br/>
      <div class="row">
        <%= form_for([:admin, @user]) do |f| %>
        <div class="col-sm-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Editar Usario</h4>
            </div>
            <div class="panel-body">
              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> Evito que este usuario se guardara:</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="row">
                <div class="col-sm-6">
                  <%= f.label :username, { class: 'req' } do %>
                    Nombre de Usuario
                  <% end %>
                  <%= f.text_field :username, { class: 'form-control', 'data-required' => 'true' } %>
                </div>
                <div class="col-sm-6 col-xs-6">
                  <%= f.label :email, "Direcci칩n de correo electr칩nico", class: "req" %>
                  <%= f.text_field :email, { class: 'form-control', 'data-required' => 'true' } %>
                </div>

              </div>
              <div class="row">
                <div class="col-sm-6">
                  <%= f.label :password, "Contrase침a", class: "req" %>
                  <%= f.password_field :password, { class: 'form-control', 'data-required' => 'true' } %>
                </div>
                <div class="col-sm-6 col-xs-6">
                  <%= f.label :password_confirmation, "Confirmar contrase침a", class: "req" %>
                  <%= f.password_field :password_confirmation, { class: 'form-control', 'data-required' => 'true' } %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <%= f.label :role, "Role", class: "req" %>
                  <%= select(:user, :role_id,  Role.local_roles.order(name: :asc).collect {|p| [ p.name, p.id ] }, { include_blank: false}, class: "form-control RolePicker", id: "inputRole")%> 
              </div>
            </div>
          </div>
        </div>
    </div>
    <div class="col-xs-12 text-right">
      <%= link_to ' Cancelar  ', (request.referrer || users_path), class: "btn btn-danger" %>      
      <%= f.submit "Guardar", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>