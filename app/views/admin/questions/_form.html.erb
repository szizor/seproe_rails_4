<%= form_for([:admin, @event]) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <label class="heading_a">Event Name</label>
        <input type="text" id="reg_input" class="form-control">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :start_date %><br />
        <%= f.datetime_select :start_date %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :end_date %><br />
        <%= f.datetime_select :end_date %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <label class="heading_a">Organized By (Adopter name or Ayuntamiento)</label>
        <%= f.text_field :user_id, :class => 'form-control' %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <label class="heading_a">Location (Public Space)</label>
        <input type="text" id="reg_input" class="form-control">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <div class="fileupload fileupload-new" data-provides="fileupload">
        <div class="fileupload-new img-thumbnail" style="width: 178px; height: 120px;"><img src="/assets/admin/no_img_180.png" alt=""></div>
        <div class="fileupload-preview fileupload-exists img-thumbnail" style="width: 178px; height: 120px"></div>
        <div>
          <span class="btn btn-default btn-file"><span class="fileupload-new">Subir imagen del Evento</span><span class="fileupload-exists">Change</span><input type="file" /></span>
          <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload">Eliminar</a>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
