<%= form_for @event, :url => listing_save_event_path, :html => {:multipart => true, :class => ''} do |f| %>
  <%= f.error_messages %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <label class="heading_a">Nombre del evento</label>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :start_date, "Fecha de inicio" %><br />
        <%= f.datetime_select :start_date %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :end_date, "Fecha de finalización" %><br />
        <%= f.datetime_select :end_date %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :user_id, :value=> @listing.adopter.id %>
  <%= f.hidden_field :listing_id, :value=> @listing.id %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.file_field :image %>
        <p class="help-block">Dimensión de la foto no debe exceder 800 píxeles de ancho Y 600 de altura.</p>
      </div>
    </div>
  </div>
  <div class="row">
      <div class="col-sm-12">
        <div class="form-group">
          <%= f.label :description, "Descripción" %>
          <%= f.text_area :description, :class => 'form-control', :rows => 6, :placeholder => 'Descripción del evento' %>
        </div>
      </div>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>