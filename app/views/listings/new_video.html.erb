<% title 'Añadir nuevo video para ' + @listing.name %>
<% content_for :sidebar do %>
  <%= render :partial => 'partials/listing/sidebar'  %>
<% end %>
<%= render :partial => 'partials/shared/header' %>

<div class="listing__details-container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Añadir nuevo vídeo para <%= @listing.name %></h3>
    </div>
    <div class="panel-body">
      <%= form_for @video, :url => listing_save_video_path, :html => {:multipart => true, :class => ''} do |f| %>
        <%= f.error_messages %>
        <%= f.hidden_field :listing_id %>
        <div class="form-group">
          <%= f.label :title, "Nombre del Vídeo" %>
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :url, "Enlace de Youtube" %>
          <%= f.text_field :url, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <p><%= f.submit "Agregar Mi Video", :class => 'btn btn-primary' %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>