<div class="container">
      <br/>
      <div class="panel panel-default">

        <div class="panel-heading text-center">
          <h3>
            Ayuntamiento
          </h3>
        </div>

        <div class="panel-body">

          <table class="table datatable display responsive no-wrap">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Subdominio</th>
                <th>Propietario</th>
                <th>Acciones</th>
              </tr>
            </thead>

            <tbody>
              <% @accounts.each do |account| %>
                <tr>
                  <td><%= account.name %></td>
                  <td><%= account.subdomain %></td>
                  <td><%= account.owner.email %></td>
                  <td>
                    <cente>
                      <%= link_to 'Editar', edit_super_admin_account_path(account) %> |
                      <%= link_to 'Borrar', super_admin_account_path(account), method: :delete, data: { confirm: "¿Está seguro que desea borrar el ayuntamiento '#{account.name}'?" } %>
                    </cente>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>


  <div class="col-md-12 text-right ">
    <%= link_to 'NUEVO', new_super_admin_account_path, class: "btn btn-primary" %>
  </div>  

</div>
