<div class="col-xs-12">
  <%= form_for [:super_admin,@account], :html => { :class => "form-horizontal user-form" }   do |f| %>

    <div class="panel panel-default">
      <div class="panel-heading text-center">
        Informaci√≥n General
      </div>

      <div class="panel-body">

        <div class="form-group field">
          <%= f.label :name, "Nombre" , class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", id: "inputName"%>
            <span class="error-message">
              <%= "#{@account.errors[:name].join(" / ")}".html_safe%>
            </span>
          </div>
        </div>

        <div class="form-group field">
          <%= f.label :subdomain, "Subdominio", class: 'col-sm-2 control-label'%>
          <div class="col-sm-10">
            <%= f.text_field :subdomain, class: "form-control", id: "inputSubdomain"%>
             <span class="error-message">
              <%= "#{@account.errors[:subdomain].join(" / ")}".html_safe%>
            </span>
          </div>
        </div>

      </div>
    </div>

    <div class="col-xs-12 text-right">
      <%= link_to ' Cancelar  ', (request.referrer || users_path), class: "btn btn-danger" %>      
      <%= f.submit "Guardar", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

