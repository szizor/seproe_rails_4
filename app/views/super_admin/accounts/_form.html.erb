<div class="col-xs-12">
  <%= form_for [:super_admin,@account], :html => { :class => "form-horizontal user-form" }   do |f| %>

    <div class="panel panel-default">
      <div class="panel-heading text-center">
        Informaci칩n General
      </div>

      <div class="panel-body">

        <div class="form-group field">
          <%= f.label :name, "Nombre" , class: "col-sm-2 control-label"%>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", id: "inputName"%>
            <span class="error-message">
              <%= "#{@account.errors[:name].join(" / ")}".html_safe%>
            </span>
          </div>
        </div>

        <div class="form-group field">
          <%= f.label :subdomain, "Subdominio", class: 'col-sm-2 control-label'%>
          <div class="col-sm-10">
            <%= f.text_field :subdomain, class: "form-control", id: "inputSubdomain"%>
             <span class="error-message">
              <%= "#{@account.errors[:subdomain].join(" / ")}".html_safe%>
            </span>
          </div>
        </div>

      </div>
    </div>

      <div class="panel panel-default">

        <div class="panel-heading text-center">
          Informaci칩n del propietario
        </div>

        <div class="panel-body">

          <%= f.fields_for :owner do |g| %>

              <%= g.hidden_field :id %>
              
              <div class="form-group field">
                <%= g.label :email, "Correo" , class: "col-sm-2 control-label"%>
                <div class="col-sm-10">
                  <%= g.email_field :email, class: "form-control", id: "inputEmail"%>
                  <span class="error-message">
                    <%= "#{@account.errors['owner.email'].join(" / ")}".html_safe%>
                  </span>
                </div>
              </div>

              <div class="form-group field">
                <%= g.label :password, "Contrase침a", class: 'col-sm-2 control-label'%>
                <div class="col-sm-10">
                  <%= g.password_field :password, class: "form-control", id: "inputPassword"%>
                   <span class="error-message">
                    <%= "#{@account.errors['owner.password'].join(" / ")}".html_safe%>
                  </span>
                </div>
              </div>

              <div class="form-group field">
                <%= g.label :password_confirmation, "Confirmar Contrase침a", class: 'col-sm-2 control-label'%>
                <div class="col-sm-10">
                  <%= g.password_field :password_confirmation, class: "form-control", id: "inputPasswordConfirmation"%>
                   <span class="error-message">
                    <%= "#{@account.errors['owner.password_confirmation'].join(" / ")}".html_safe%>
                  </span>
                </div>
              </div>

          <% end %>

        </div>
      </div>


    <div class="col-xs-12 text-right">
      <%= link_to ' Cancelar  ', super_admin_accounts_path, class: "btn btn-danger" %>      
      <%= f.submit "Guardar", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

